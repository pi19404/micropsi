//---------------------------------------------------------------------------------------------------------------------
inline
void
CButtonState::Update(bool p_bDownNow)
{
	m_bDownLastTime = m_bDownNow;
	m_bDownNow = p_bDownNow;
}

//---------------------------------------------------------------------------------------------------------------------
inline
bool
CButtonState::ButtonDownEvent() const
{
	return (m_bDownNow && !m_bDownLastTime);
}

//---------------------------------------------------------------------------------------------------------------------
inline
bool			
CButtonState::ButtonUpEvent() const
{
	return (!m_bDownNow && m_bDownLastTime);
}


//---------------------------------------------------------------------------------------------------------------------
inline
CVec3 
PsiPos2Engine(const CVec3& p_xrVector)
{
	return CVec3(p_xrVector.x(), p_xrVector.z(), -p_xrVector.y());
}

//---------------------------------------------------------------------------------------------------------------------
inline
CVec3 
EnginePos2Psi(const CVec3& p_xrVector)
{
	return CVec3(p_xrVector.x(), -p_xrVector.z(), p_xrVector.y());
}

//---------------------------------------------------------------------------------------------------------------------
inline
float 
PsiAngle2Engine(float p_fAngle)
{
	return - ((p_fAngle - 90.0f) * PIf / 180.0f);
}

//---------------------------------------------------------------------------------------------------------------------
inline
float 
EngineAngle2Psi(float p_fAngle)
{
	return -(p_fAngle * 180 / PIf - 90.0f);
}


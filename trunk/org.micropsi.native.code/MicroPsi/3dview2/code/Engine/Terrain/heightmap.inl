inline
int
CHeightMap::GetHeight(int p_iX, int p_iZ) const
{
	if(p_iX < 0  ||  p_iZ < 0  ||  p_iX >= m_iWidth  ||  p_iZ >= m_iHeight)
	{
		return 0;
	}
	return (int) m_pcMapData[p_iZ * m_iWidth + p_iX];
}	
//---------------------------------------------------------------------------------------------------------------------
inline
int
CHeightMap::GetHeight() const
{
	return m_iHeight;
}
//---------------------------------------------------------------------------------------------------------------------
inline
int				
CHeightMap::GetWidth() const
{
	return m_iWidth;
}
